{
  "files": [],
  "compilerOptions": {
    /* Basic Options */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",

    /* Path Aliases */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Module Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Strictness & Misc */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
